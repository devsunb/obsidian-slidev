{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2021",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": ["DOM", "ES2021"],
		"jsx": "react-jsx"
	},
	"include": ["**/*.ts"],
	"exclude": [
		"node_modules"
	]
}
